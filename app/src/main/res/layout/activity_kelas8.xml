<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Kelas8Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack8toHome"
                android:layout_width="46dp"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_back" />


            <TextView
                android:id="@+id/tvJudulKelas8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Daftar Buku Kelas 8" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/btnAgama813"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Pendidikan Agama Islam K13" />

        <Button
            android:id="@+id/btnPKN813"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:text="PKN K13" />

        <Button
            android:id="@+id/btnBhsIndo813"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:text="Bahasa Indonesia K13" />

        <Button
            android:id="@+id/btnMTK8S113"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:text="MATEMATIKA S1 K13" />

        <Button
            android:id="@+id/btnMTK8S213"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:text="MATEMATIKA S2 K13" />

        <Button
            android:id="@+id/btnIPA8S113"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:text="IPA S1 K13" />

        <Button
            android:id="@+id/btnIPA8S213"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:text="IPA S2 K13" />

        <Button
            android:id="@+id/btnIPS813"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:text="IPS K13" />

        <Button
            android:id="@+id/btnPenjaskes813"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:text="Penjaskes K13" />

        <Button
            android:id="@+id/btnBhsIng813"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:text="Bahasa Inggris K13" />

        <Button
            android:id="@+id/btnSBK813"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:text="SBK K13" />

        <Button
            android:id="@+id/btnPrakarya8S113"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:text="Prakarya S1 K13" />

        <Button
            android:id="@+id/btnPrakarya8S213"
            android:layout_width="273dp"
            android:layout_gravity="center"
        android:textColor="@color/black"
            android:backgroundTint="#be4d25"
            android:layout_height="wrap_content"
            android:text="Prakarya S2 K13" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>